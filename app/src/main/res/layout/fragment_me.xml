<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:clipToPadding="false"
    android:background="@color/theme_white"
    android:scrollbarStyle="outsideOverlay" >

	<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >
	  	
	    <!-- Scrapping profile information
	      <TextView
	          android:id="@+id/me_name"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentTop="true"
	          android:layout_alignParentLeft="true"
	          android:text="@string/me_name"
	          android:textColor="@color/theme_gray"
	          android:textSize="40sp"  />
	      
	      <TextView
	          android:id="@+id/me_name_desc"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/me_name"
	          android:layout_alignParentLeft="true"
	          android:layout_marginTop="-5dp"
	          android:text="@string/me_name_desc"
	          android:textColor="@color/theme_gray"
	          android:textSize="14sp" />
	      
	      <TextView
	          android:id="@+id/me_school"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/me_name_desc"
	          android:layout_alignParentLeft="true"
	          android:text="@string/me_school"
	          android:textColor="@color/theme_gray"
	          android:textSize="30sp" />
	      
	      <TextView
	          android:id="@+id/me_school_desc"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/me_school"
	          android:layout_alignParentLeft="true"
	          android:layout_marginTop="-5dp"
	          android:text="@string/me_school_desc"
	          android:textColor="@color/theme_gray"
	          android:textSize="14sp" />
	      
	      <TextView
	          android:id="@+id/me_major"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/me_school_desc"
	          android:layout_alignParentLeft="true"
	          android:text="@string/me_major"
	          android:textColor="@color/theme_gray"
	          android:textSize="30sp" />
	      
	      <TextView
	          android:id="@+id/me_major_desc"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/me_major"
	          android:layout_alignParentLeft="true"
	          android:layout_marginTop="-5dp"
	          android:text="@string/me_major_desc"
	          android:textColor="@color/theme_gray"
	          android:textSize="14sp" />
	  
		<TextView
		    android:id="@+id/me_classification"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/me_major_desc"
		    android:text="@string/me_classification"
		    android:textColor="@color/theme_gray"
		    android:textSize="30sp" />
		
		<TextView
	          android:id="@+id/me_classification_desc"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@+id/me_classification"
	          android:layout_alignParentLeft="true"
	          android:layout_marginTop="-5dp"
	          android:text="@string/me_classification_desc"
	          android:textColor="@color/theme_gray"
	          android:textSize="14sp" />
		
		-->
		
		<!-- GPA Header -->
		<TextView
	        android:textIsSelectable="false"
	        android:id="@+id/me_gpa_header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:textSize="26sp"
	        android:textColor="@color/theme_gray"
	        android:text="@string/me_gpa_header"
	        />
		
		<View
		    android:id="@+id/me_gpa_header_divider"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/lvDividerHeight"
	        android:layout_below="@+id/me_gpa_header"
	        android:background="@color/theme_gray"
	        />
		
		<!-- GPA -->
		<LinearLayout
		    android:id="@+id/me_gpa_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/me_gpa_header_divider"
		    android:layout_marginTop="-5dp"
		    android:orientation="horizontal" >
		    
		    <TextView
			    android:id="@+id/me_gpa"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/me_gpa"
			    android:textColor="@color/theme_gray"
			    android:textSize="60sp" />
		    
		    <TextView
			    android:id="@+id/me_gpa_with_exclusions"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="@string/me_gpa"
			    android:textColor="@color/theme_gray"
			    android:textSize="40sp" />
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/me_gpa_text_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/me_gpa_linearlayout"
		    android:layout_marginTop="-10dp"
		    android:orientation="horizontal" >
			
		    <TextView
		    android:id="@+id/me_gpa_desc"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/me_gpa_desc"
		    android:textColor="@color/theme_gray"
		    android:textSize="14sp" />
		    
		    <TextView
		    android:id="@+id/me_gpa_with_exclusions_desc"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="right"
		    android:text="@string/me_gpa_with_exclusions_desc"
		    android:textColor="@color/theme_gray"
		    android:textSize="14sp" />
		    
		</LinearLayout>
	
		<!-- Completion Progress Header -->
		<TextView
	        android:textIsSelectable="false"
	        android:id="@+id/me_progress_header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_below="@+id/me_gpa_text_linearlayout"
			android:layout_marginTop="20dp"
	        android:textSize="26sp"
	        android:textColor="@color/theme_gray"
	        android:text="@string/me_progress_header"
	        />
		
		<TextView
	        android:textIsSelectable="false"
	        android:id="@+id/me_progress_header_subtext"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_below="@+id/me_progress_header"
	        android:textSize="14sp"
	        android:textColor="@color/theme_gray"
	        android:text="@string/me_exludes_hidden_courses_subheader"
	        />
		
		<View
		    android:id="@+id/me_progress_header_divider"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/lvDividerHeight"
	        android:layout_below="@+id/me_progress_header_subtext"
	        android:background="@color/theme_gray"
	        />
		
		<!-- Completion Progress -->
		<LinearLayout
		    android:id="@+id/me_progress_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_marginTop="10dp"
		    android:layout_below="@+id/me_progress_header_divider"
		    android:orientation="horizontal" >
		    
		    <View
		        android:id="@+id/me_progress_completed"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0"
		        android:background="@color/theme_teal" />
		    
		    <View
		        android:id="@+id/me_progress_not_completed"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/theme_blue" />
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/me_progress_text_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/me_progress_linearlayout"
		    android:orientation="horizontal" >
		    
			<TextView
			    android:id="@+id/me_progress_fraction"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="left"
			    android:text="@string/me_progress_fraction"
			    android:textColor="@color/theme_gray"
			    android:textSize="30sp" />
			
			<TextView
			    android:id="@+id/me_progress_fraction_hours"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="@string/me_progress_fraction_hours"
			    android:textColor="@color/theme_gray"
			    android:textSize="30sp" />
		
			<TextView
			    android:id="@+id/me_progress_percentage"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
				android:gravity="right"
			    android:text="@string/me_progress_percentage"
			    android:textColor="@color/theme_gray"
			    android:textSize="30sp" />
			
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/me_progress_text_desc_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/me_progress_text_linearlayout"
		    android:orientation="horizontal" >
		    
			<TextView
			    android:id="@+id/me_progress_fraction_desc"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="left"
			    android:text="@string/me_progress_fraction_desc"
			    android:textColor="@color/theme_gray"
			    android:textSize="14sp" />
			
			<TextView
			    android:id="@+id/me_progress_fraction_hours_desc"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="@string/me_progress_fraction_hours_desc"
			    android:textColor="@color/theme_gray"
			    android:textSize="14sp" />
		
			<TextView
			    android:id="@+id/me_progress_percentage_desc"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
				android:gravity="right"
			    android:text="@string/me_progress_percentage_desc"
			    android:textColor="@color/theme_gray"
			    android:textSize="14sp" />
			
		</LinearLayout>
		
		<!-- Grade Distribution Header -->
		<TextView
	        android:textIsSelectable="false"
	        android:id="@+id/me_grade_dist_header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_below="@+id/me_progress_text_desc_linearlayout"
			android:layout_marginTop="20dp"
	        android:textSize="26sp"
	        android:textColor="@color/theme_gray"
	        android:text="@string/me_grade_dist_header"
	        />
		
		<TextView
	        android:textIsSelectable="false"
	        android:id="@+id/me_grade_dist_header_subtext"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_below="@+id/me_grade_dist_header"
	        android:textSize="14sp"
	        android:textColor="@color/theme_gray"
	        android:text="@string/me_exludes_hidden_courses_subheader"
	        />
		
		<View
		    android:id="@+id/me_grade_dist_header_divider"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/lvDividerHeight"
	        android:layout_below="@+id/me_grade_dist_header_subtext"
	        android:background="@color/theme_gray"
	        />
		
		<LinearLayout
		    android:id="@+id/me_grade_dist_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_marginTop="10dp"
		    android:layout_below="@+id/me_grade_dist_header_divider"
		    android:orientation="horizontal" >
		    
		    <View
		        android:id="@+id/me_grade_dist_blank"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/gray" />
		    
		    <View
		        android:id="@+id/me_grade_dist_a"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/theme_green" />
		    
		    <View
		        android:id="@+id/me_grade_dist_b"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/theme_teal" />
		    
		    <View
		        android:id="@+id/me_grade_dist_c"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/theme_blue" />
		    
		    <View
		        android:id="@+id/me_grade_dist_d"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/theme_gray" />
		    
		    <View
		        android:id="@+id/me_grade_dist_f"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:background="@color/android_dark_red" />
		    
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/me_grade_dist_key_linearlayout_1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_below="@+id/me_grade_dist_linearlayout">
		    
			<TextView
			    android:id="@+id/me_grade_dist_key_a"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_grade_dist_key_a"
			    android:textColor="@color/theme_green"
			    android:textSize="22sp" />
			
			<TextView
			    android:id="@+id/me_grade_dist_key_b"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_grade_dist_key_b"
			    android:textColor="@color/theme_teal"
			    android:textSize="22sp" />
			
			<TextView
			    android:id="@+id/me_grade_dist_key_c"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_grade_dist_key_c"
			    android:textColor="@color/theme_blue"
			    android:textSize="22sp" />
		    
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/me_grade_dist_key_linearlayout_2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_below="@+id/me_grade_dist_key_linearlayout_1">
			
		    
		
			<TextView
			    android:id="@+id/me_grade_dist_key_d"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_grade_dist_key_d"
			    android:textColor="@color/theme_gray"
			    android:textSize="22sp" />
			
			<TextView
			    android:id="@+id/me_grade_dist_key_f"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_grade_dist_key_f"
			    android:textColor="@color/android_dark_red"
			    android:textSize="22sp" />
		
		</LinearLayout>
		
		<!-- Database Header -->
		<TextView
	        android:textIsSelectable="false"
	        android:id="@+id/me_database_header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_below="@+id/me_grade_dist_key_linearlayout_2"
			android:layout_marginTop="20dp"
	        android:textSize="26sp"
	        android:textColor="@color/theme_gray"
	        android:text="@string/me_database_header"
	        />
		
		<View
		    android:id="@+id/me_database_header_divider"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/lvDividerHeight"
	        android:layout_below="@+id/me_database_header"
	        android:background="@color/theme_gray"
	        />
		
		<!-- Database -->
		<LinearLayout
		    android:id="@+id/me_database_count_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/me_database_header_divider"
		    android:orientation="horizontal" >
		    
			<TextView
			    android:id="@+id/me_database_semester_count"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_database_semester_count"
			    android:textColor="@color/theme_gray"
			    android:textSize="30sp" />
			
			<TextView
			    android:id="@+id/me_database_group_count"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_database_group_count"
			    android:textColor="@color/theme_gray"
			    android:textSize="30sp" />
		
			<TextView
			    android:id="@+id/me_database_course_count"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
				android:gravity="center_horizontal"
			    android:text="@string/me_database_course_count"
			    android:textColor="@color/theme_gray"
			    android:textSize="30sp" />
			
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/me_database_count_desc_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/me_database_count_linearlayout"
		    android:orientation="horizontal" >
		    
			<TextView
			    android:id="@+id/me_database_semester_count_desc"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_database_semester_count_desc"
			    android:textColor="@color/theme_gray"
			    android:textSize="14sp" />
			
			<TextView
			    android:id="@+id/me_database_group_count_desc"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="@string/me_database_group_count_desc"
			    android:textColor="@color/theme_gray"
			    android:textSize="14sp" />
		
			<TextView
			    android:id="@+id/me_database_course_count_desc"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
				android:gravity="center_horizontal"
			    android:text="@string/me_database_course_count_desc"
			    android:textColor="@color/theme_gray"
			    android:textSize="14sp" />
			
		</LinearLayout>
		
		
		<!-- Add in future update. Or not.
		<TextView
		    android:id="@+id/me_grade_dist_desc_link"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/me_grade_dist_desc"
		    android:layout_marginTop="-3dp"
		    android:text="@string/me_view_more_details"
		    android:textColor="@color/theme_gray"
		    android:textSize="14sp" /> -->
		
	</RelativeLayout>
</ScrollView>